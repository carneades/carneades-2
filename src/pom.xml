                <artifactId>exec-maven-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <id>lein-deps-CarneadesEngine</id>
                        <phase>install</phase>
                        <configuration>
                            <executable>lein</executable>
                            <workingDirectory>${project.basedir}/CarneadesEngine</workingDirectory>
                            <arguments>
                                <argument>deps</argument>
                            </arguments>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                    <execution>
                         <id>lein-install-CarneadesEngine</id>
                         <phase>install</phase>
                         <configuration>
                             <executable>lein</executable>
