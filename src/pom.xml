                         </configuration>
                         <goals>
                             <goal>exec</goal>
                         </goals>
                     </execution>
                     <execution>
                         <id>lein-deps-CarneadesExamples</id>
                         <phase>install</phase>
                         <configuration>
                             <executable>lein</executable>
                             <workingDirectory>${project.basedir}/CarneadesExamples</workingDirectory>
                             <arguments>
                                 <argument>deps</argument>
